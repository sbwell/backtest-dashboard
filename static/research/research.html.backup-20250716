  <script>
    // Tab switching logic
    document.querySelectorAll('.tab-nav li').forEach(tab => {
      tab.addEventListener('click', () => {
        document.querySelectorAll('.tab-nav li').forEach(t => t.classList.remove('active'));
        document.querySelectorAll('.tab-pane').forEach(p => p.classList.remove('active'));
        tab.classList.add('active');
        document.getElementById(tab.getAttribute('data-tab')).classList.add('active');
      });
    });

    // Add event listeners for load data buttons once the page loads
    document.addEventListener('DOMContentLoaded', function() {
      // Wait a bit for chart.js to load and initialize
      setTimeout(function() {
        const loadEarlierBtn = document.getElementById('loadEarlierBtn');
        const loadMoreRecentBtn = document.getElementById('loadMoreRecentBtn');
        
        if (loadEarlierBtn && window.tradingChart && window.tradingChart.loadEarlierData) {
          loadEarlierBtn.addEventListener('click', window.tradingChart.loadEarlierData);
        } else {
          console.warn('loadEarlierData function not found');
        }
        
        if (loadMoreRecentBtn && window.tradingChart && window.tradingChart.loadMoreRecentData) {
          loadMoreRecentBtn.addEventListener('click', window.tradingChart.loadMoreRecentData);
        } else {
          console.warn('loadMoreRecentData function not found');
        }
      }, 500);
    });
  </script>
